<UserControl x:Class="Programmation_Systeme_Groupe_B.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programmation_Systeme_Groupe_B"
        xmlns:vm="clr-namespace:Programmation_Systeme_Groupe_B.ViewModels"
        mc:Ignorable="d"
        Height="450" Width="800">
    <UserControl.Resources>
        <vm:ViewModel x:Key="VM"/>
    </UserControl.Resources>
    <Grid DataContext="{Binding Source={StaticResource VM}}">
        <Grid.Background>
            <ImageBrush ImageSource="/View/fondMiA.jpg"/>
        </Grid.Background>
        <Button Content="Salut c'est moi" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding OpenBrowser}" Height="48" Width="125" Visibility="Visible" Click="Button_Click" Margin="614,142,0,0">
            <UIElement.RenderTransform>
                <MatrixTransform/>
            </UIElement.RenderTransform>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Label Content="Label" HorizontalAlignment="Left" Margin="201,52,0,0" VerticalAlignment="Top" Height="61" Width="312" AutomationProperties.Name="labelTest" BorderBrush="Black" Background="White"/>
        <TabControl>
            <TabItem Header="TabItem">
                <Grid>
                    <Grid.Background>
                        <ImageBrush ImageSource="/View/fondMiA.jpg"/>
                    </Grid.Background>
                    <Button Content="Salut c'est moi" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding OpenBrowser}" Height="48" Width="125" Visibility="Visible" Click="Button_Click" Margin="614,142,0,0">
                        <UIElement.RenderTransform>
                            <MatrixTransform/>
                        </UIElement.RenderTransform>
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    </Button>
                  </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
